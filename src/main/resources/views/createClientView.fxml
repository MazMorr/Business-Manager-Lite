<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="370.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.marcosoft.storageSoftware.application.controller.CreateClientViewController">
    <stylesheets>
        <URL value="@../Styles.css"/>
    </stylesheets>
    <HBox alignment="CENTER" layoutX="5.0" prefHeight="64.0" prefWidth="323.0" styleClass="slogan"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <effect>
            <DropShadow/>
        </effect>
        <Label styleClass="title" text="Regístrese">
            <font>
                <Font name="Constantia Bold Italic" size="40.0"/>
            </font>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Label>
    </HBox>
    <VBox layoutX="14.0" layoutY="71.0" prefHeight="225.0" prefWidth="248.0" AnchorPane.bottomAnchor="10.0"
          AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="85.0">
        <Label text="Nombre de Usuario:">
            <font>
                <Font name="System Bold Italic" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="txtFieldUserName" onKeyTyped="#txtFieldTypingUserName" prefHeight="25.0" prefWidth="295.0"
                   promptText="De 4-20 carácteres" styleClass="inputForm"/>
        <Label text="Contraseña:">
            <font>
                <Font name="System Bold Italic" size="14.0"/>
            </font>
            <VBox.margin>
                <Insets top="2.0"/>
            </VBox.margin>
        </Label>
        <TextField fx:id="textFieldPassword" promptText="De 4 - 16 carácteres"/>
        <PasswordField fx:id="passFieldPassword" promptText="De 4 - 16 carácteres"/>
        <CheckBox fx:id="cbShowPassword" mnemonicParsing="false" onAction="#showPassword" text="Mostrar Contraseña"/>
        <Label text="Confirmar Contraseña:">
            <font>
                <Font name="System Bold Italic" size="14.0"/>
            </font>
            <VBox.margin>
                <Insets top="2.0"/>
            </VBox.margin>
        </Label>
        <PasswordField fx:id="passFieldPasswordConfirmed" onKeyTyped="#txtFieldTypingPassword"
                       promptText="De 4-16 carácteres" styleClass="inputForm"/>
        <Label text="Compañía Asociada (OPCIONAL):">
            <font>
                <Font name="System Bold Italic" size="14.0"/>
            </font>
            <VBox.margin>
                <Insets top="2.0"/>
            </VBox.margin>
        </Label>
        <TextField fx:id="txtFieldCompany" onKeyTyped="#txtFieldTypingCompany" promptText="De 4-16 carácteres "
                   styleClass="inputForm"/>
        <Button defaultButton="true" mnemonicParsing="false" onAction="#createAccount" prefHeight="27.0"
                prefWidth="308.0" styleClass="btnStock" text="Crear Cuenta">
            <font>
                <Font name="System Bold Italic" size="14.0"/>
            </font>
            <VBox.margin>
                <Insets left="-2.0" right="-2.0" top="3.0"/>
            </VBox.margin>
        </Button>
    </VBox>
    <VBox alignment="BOTTOM_CENTER" layoutX="274.0" layoutY="87.0" prefHeight="236.0" prefWidth="154.0" spacing="10.0"
          AnchorPane.rightAnchor="15.0">
        <ImageView fitHeight="131.0" fitWidth="133.0" pickOnBounds="true" preserveRatio="true">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <Image url="@../images/usuario.png"/>
        </ImageView>
        <Label fx:id="txtDebugForm" alignment="BOTTOM_CENTER" contentDisplay="RIGHT" prefHeight="83.0" prefWidth="154.0"
               text="Rellene los campos por favor" textAlignment="CENTER" textFill="#f27f22" wrapText="true"
               VBox.vgrow="ALWAYS">
            <font>
                <Font size="13.0"/>
            </font>
        </Label>
    </VBox>
    <Button layoutX="-17.0" layoutY="11.0" mnemonicParsing="false" onAction="#goBack" prefHeight="77.0" prefWidth="65.0"
            style="-fx-background-color: transparent;" styleClass="btnGoBackCreateAccount" AnchorPane.leftAnchor="0.0"
            AnchorPane.topAnchor="0.0">
        <font>
            <Font size="10.0"/>
        </font>
        <graphic>
            <ImageView fitHeight="52.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                <effect>
                    <InnerShadow choke="1.0">
                        <color>
                            <Color red="1.0" green="1.0" blue="1.0"/>
                        </color>
                    </InnerShadow>
                </effect>
                <Image url="@../images/left-arrow-28-512.png"/>
            </ImageView>
        </graphic>
    </Button>
    <ProgressIndicator fx:id="percentageBar" layoutX="425.0" layoutY="64.0" opacity="0.0" prefHeight="36.0"
                       prefWidth="42.0" progress="0.0"/>
</AnchorPane>
